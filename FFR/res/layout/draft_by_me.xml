<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/draft_who_close"
        style="@+style/MyButtonBarStyleBack"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Back"/>

    <TextView
        android:id="@+id/name_header"
        style="@+style/PopupMainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/draft_who_close"
        android:layout_centerHorizontal="true"
        android:text="Header" />

    <AutoCompleteTextView
        android:id="@+id/amount_paid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/spinner_well"
        android:dropDownSelector="#FF0000"
        android:ems="10"
        android:inputType="number"
        android:textColor="#000000" />

</RelativeLayout>