<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <Button
        android:id="@+id/sort_second_close"
                        style="@+style/MyButtonBarStyle"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textColor="#CD0000"
        android:text="X" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sort_second_close"
        android:text="Would you like to further narrow down the search?"
        style="@+style/PopupSubText"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sort_second_sos"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="How many rankings minimum should a player have shown up in?"
        style="@+style/PopupSubText" />

    <CheckBox
        android:id="@+id/sort_second_healthy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sort_second_run"
        android:textSize="11sp"
        android:layout_alignParentRight="true"
        android:text="Only healthy"/>

    <CheckBox
        android:id="@+id/sort_second_watch"
        android:layout_width="wrap_content"
        android:textSize="11sp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sort_second_under_30"
        android:layout_alignBottom="@+id/sort_second_under_30"
        android:layout_alignLeft="@+id/sort_second_healthy"
        android:text="Watch list" />

    <CheckBox
        android:id="@+id/sort_second_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sort_second_healthy"
        android:layout_alignTop="@+id/sort_second_run"
        android:textSize="11sp"
        android:text="Good pass blocking"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/min_rankings"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="What minimum projection should players have?"
        style="@+style/PopupSubText" />

    <Button
        android:id="@+id/sort_second_submit"
        style="@style/ButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sort_second_back"
        android:layout_alignBottom="@+id/sort_second_back"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_red"
        android:text="Submit" />

    <Button
        android:id="@+id/sort_second_back"
        style="@style/ButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/sort_second_min_projection"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/btn_red"
        android:text="Back" />

    <CheckBox
        android:id="@+id/sort_second_run"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sort_second_contract_year"
        android:textSize="11sp"
        android:layout_below="@+id/sort_second_contract_year"
        android:text="Good run blocking"/>

    <CheckBox
        android:id="@+id/sort_second_under_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sort_second_run"
        android:layout_below="@+id/sort_second_pass"
        android:text="Under 30"
        android:textSize="11sp" />
    
    <CheckBox
        android:id="@+id/sort_second_sos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sort_second_run"
        android:textSize="11sp"
        android:layout_below="@+id/sort_second_under_30"
        android:text="Easy SOS"/>
    
     <CheckBox
        android:id="@+id/sort_second_start_dist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sort_second_sos"
        android:textSize="11sp"
        android:layout_alignBottom="@+id/sort_second_sos"
        android:layout_alignLeft="@+id/sort_second_healthy"
        android:text="Consistently good" />

    <CheckBox
        android:id="@+id/sort_second_contract_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sort_second_back"
        android:layout_below="@+id/textView1"
        android:textSize="11sp"
        android:text="Contract year" />

    <EditText
        android:id="@+id/min_rankings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sort_second_min_projection"
        android:layout_below="@+id/textView2"
        android:background="@drawable/spinner_well"
        android:ems="10"
        android:inputType="number"
        android:text="1"
        android:textColor="#000000" >
    </EditText>

    <EditText
        android:id="@+id/sort_second_min_projection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:background="@drawable/spinner_well"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:textColor="#000000" />

</RelativeLayout>
