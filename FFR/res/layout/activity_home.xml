<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:id="@+id/home_base"
    android:background="@drawable/stadium">

   <LinearLayout
       android:id="@+id/home_well"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_margin="22dp"
       android:orientation="vertical"
       android:weightSum="7"
       android:background="@drawable/content_well_home" >
	          <TextView
	       android:id="@+id/textView1"
	       android:layout_weight="1"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:layout_alignParentTop="true"
	       android:layout_centerHorizontal="true"
	       android:text="2014 Fantasy Football GM"
	       style="@style/ButtonText"
			android:background="@drawable/btn_red_home_top"
	       android:textSize="24sp" />
               <Button
            android:id="@+id/rankings"
            style="@style/ButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="45dp"
            android:layout_weight="3"
            android:background="@drawable/btn_red_home_middle"
            android:textSize="21sp"
            android:text="View Rankings" />
               
                       <Button
            android:id="@+id/import_league_btn"
            style="@style/ButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:minHeight="45dp"
            android:background="@drawable/btn_red_home_middle"
            android:textSize="21sp"
            android:text="My Leagues" />

    </LinearLayout>


   
   <com.devspark.sidenavigation.SideNavigationView
        android:id="@+id/side_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>