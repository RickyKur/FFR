<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#992f2f" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="15dp"
                android:top="7dp"
                android:right="15dp"
                android:bottom="7dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#ff5454"/>
            <corners
                android:radius="4dp" />
            <padding
                android:left="18dp"
                android:top="7dp"
                android:right="18dp"
                android:bottom="7dp" />
        </shape>
    </item>
</selector>